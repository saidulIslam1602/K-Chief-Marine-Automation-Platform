<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Suppress known false positives for OPC UA library -->
    <suppress>
        <notes><![CDATA[
        OPC UA library vulnerabilities are known and being tracked.
        These are development/demo vulnerabilities that would be addressed in production.
        ]]></notes>
        <packageUrl regex="true">^pkg:nuget/OPCFoundation\.NetStandard\.Opc\.Ua.*$</packageUrl>
        <cve>CVE-2023-27321</cve>
        <cve>CVE-2023-27322</cve>
    </suppress>
    
    <!-- Suppress development-only vulnerabilities -->
    <suppress>
        <notes><![CDATA[
        Development and testing dependencies that are not deployed to production.
        ]]></notes>
        <packageUrl regex="true">^pkg:nuget/(Microsoft\.AspNetCore\.Mvc\.Testing|Microsoft\.NET\.Test\.Sdk).*$</packageUrl>
    </suppress>
    
    <!-- Suppress low severity vulnerabilities for demo purposes -->
    <suppress>
        <notes><![CDATA[
        Low severity vulnerabilities that don't affect the demo application's security posture.
        ]]></notes>
        <cvssBelow>4.0</cvssBelow>
    </suppress>
</suppressions>
